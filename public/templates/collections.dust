{>"layouts/master_front" /}
{<title}
Absainte collections
{/title}

{<body}
<div class="main products">
    <h1><span>Collections Absainte</span></h1>
    {?collections}
    {#collections}
        <div class="product-thumbnail">
            <a class="product-link" href="{langPath}/shop/{type}/collections/{.permalink}">
                <img width="200" height="300" src="{.mainImage.thumbnailUrl}" alt="">
                <h4>{.name}</h4>
            </a>
        </div>
    {/collections}
    {:else}
    Nothing found :(
    {/collections}
</div>
{/body}
